type hal_livedisplay_lenovo_zippo, domain;
hal_server_domain(hal_livedisplay_lenovo_zippo, hal_lineage_livedisplay)

type hal_livedisplay_lenovo_zippo_exec, exec_type, vendor_file_type, file_type;
init_daemon_domain(hal_livedisplay_lenovo_zippo)

# Allow hal_livedisplay_lenovo_zippo to use vendor-binder service
vndbinder_use(hal_livedisplay_lenovo_zippo)

# Allow hal_livedisplay_lenovo_zippo to find qdisplay_service
allow hal_livedisplay_lenovo_zippo qdisplay_service:service_manager find;

# Allow hal_livedisplay_lenovo_zippo to write to DisplayMode nodes
allow hal_livedisplay_lenovo_zippo sysfs_graphics:dir r_dir_perms;
allow hal_livedisplay_lenovo_zippo sysfs_fod:file rw_file_perms;
allow hal_livedisplay_lenovo_zippo sysfs_livedisplay_tuneable:file rw_file_perms;

# Allow hal_livedisplay_lenovo_zippo to store files under /data/vendor/display and access them
allow hal_livedisplay_lenovo_zippo display_vendor_data_file:dir rw_dir_perms;
allow hal_livedisplay_lenovo_zippo display_vendor_data_file:file create_file_perms;

# Allow hal_livedisplay_lenovo_zippo to set vendor display prop
set_prop(hal_livedisplay_lenovo_zippo, vendor_display_prop)
